                <div class="register-cont-label-input">
                    <div><label for="img">Imagen:</label></div>
                    <input 
                        class="box-ingrese-datos" 
                        type="file" 
                        name="img" 
                        id="img"
                        value="<%= locals.oldData ? oldData.img : null %>"
                    >
                    <div class="divErrorImg text-red">
                        <% if (locals.errors && errors.img) { %>
                            <div class="text-red">
                                <%= errors.img.msg %>
                            </div>
                        <% } %>
                    </div>
                </div>


                <div class="register-cont-label-input">
                    <div><label for="email">Email:</label></div>
                    <input 
                        class="box-ingrese-datos"
                        type="email" 
                        name="email" 
                        id="email" 
                        placeholder="Ingrese su email" 
                        value="<%= locals.oldData ? oldData.email : null %>"
                    /> 
                    <div class="divErrorEmail text-red"> 
