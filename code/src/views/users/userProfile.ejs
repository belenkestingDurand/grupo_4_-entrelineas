<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs'); %>
<body>
	<!-- Header-->
	<%- include('../partials/header.ejs'); %>
	<title>Entre Lineas - <%= user.firstName + ' ' + user.lastName %></title>
<main class="up-main">
	<!-- main -->
	<div class="up-colorBackgrownd-style">
	</div>
	<section>	
		<section class="up-profilePicture">
			<div class = "up-porfilePicture-div">
				<% if (locals.userLogged.profilePic) { %>
					<img class="up-porfilePicture-img" src="/img/users/<%=locals.userLogged.profilePic%>"/>
				<% } else { %>    
				  <img class="up-porfilePicture-img" src="/img/users/default.png" />
				  <% } %>

				
			</div>
		</section>
		<section class = "up-data">
			<h2 class="up-email-style"><%= user.email %> </h2>
			<div class = "up-colorBackgrownd-gris up-personali">
				<h6 class="up-100">Información personal</h6>
				<h4 class="up-100"><%= user.firstName %>  <%= user.lastName %></h4>
			</div>
			<div class = "user-address-section up-direction">
				<h6 class="up-100">Dirección de envio</h6>
				<% if(locals.user.addresses == undefined){ %>
					<h6 class="up-100 gris-oscuro">No se encontro informacion de direccion de envio</h6>							
				<% } else { %>
					<div class="addressesWvalues">
					<h4 class="up-0-5">Pais:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].country %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">Provincia:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].province %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">Ciudad:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].city %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">Calle:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].street %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">N° de residencia:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].number %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">Codigo postal:</h4>
						<h4 class="up-0-5-value gris-oscuro"><%= user.addresses[0].postalCode %></h4>
					</div>
					<div class="addressesWvalues">
						<h4 class="up-0-5">Detalles:</h4>
						<h6 class="up-0-5-value gris-oscuro"><%= user.addresses[0].infoExtra %></h6>
					</div>
				<% } %>
			</div>
		</section>
		<section class="user-edits-buttons">
			<section class="prof-button-aligned">
				<br><a href="/users/userProfile/edit/name"><input class="edit-button edit-button-name" type="button" value="Editar nombre"></a>
				<br><a href="/users/userProfile/edit/address"><input class="edit-button edit-button-adress" type="button" value="Editar dirección de envio"></a>
				<br><a href="/users/userProfile/edit/email"><input class="edit-button edit-button-mail" type="button" value="Editar mail" ></a>
				<br><a href="/users/userProfile/edit/password"><input class="edit-button edit-button-pass" type="button" value="Editar contraseña"></a>

			</section>
		</section>
	</section>
</main>

	<%- include('../partials/footer.ejs'); %>
</body>
</html>