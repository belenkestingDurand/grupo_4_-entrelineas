<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Head -->
    <%- include('../partials/head.ejs') %>
    <title>Entre Lineas - Home</title>
</head>

<body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

    <main class="home-main">
    <div class="div-banner">
        <img class="home-banner" src="/img/Banner.jpg" alt="Estanteria con Libros">
        <img class="home-banner2" src="/img/Banner2.jpeg" alt="Estanteria con Libros">
    </div>
    <section clase="home-section-search" style="
    width: 100%;
    display: flex;
    justify-content: center;"><div class="div-nav-search">
        <form class="nav-search" action="/search2" method="POST" role="search2" >
            <input  class="box-ingrese-datos" type="text" placeholder="Buscar" name="search">
            <button type="submit" class="nav-search-btn" tabindex="3">
                <span class="material-symbols-outlined"><img src="/img/outline_search_white_24dp.png" alt="search"></span>
            </button>
        </form>
    </div></section>
    
        
        <section class="product-showcase">
            <% books.forEach(product => { %>
            <article class="product">
                <div class="img-more">
                    <div class="home-etiqueta-product-type"><%= product.productsTypes.title%></div>
                    <img class="home-book-product-img" src="<%= product.picture %>" alt="libro de prueba">
                    <div class="position-ver-mas"><a href="/detalle/<%= product.id %>"><input class="see-more home-prod-btm" type="button" value="Ver mÃ¡s"></a></div>
                    <div class="position-button-comprar"><input class="comprar home-prod-btm comprar_cart" data-id="<%= product.id %>" type="button" value="Comprar"></div>
                    <!-- <input class="buy-item home-prod-btm" type="button" value="Comprar"> -->
                </div>
                <section class="book-detail-home">
                    <div class="book-name-price">
                        <h5 class="book-product-name"><%= product.name %></h5>
                        <h5 class="book-product-price">$<%= product.price %></h5>
                    </div>
                    <% if (product.id_author != null){ %>
                        <h6 class="book-product-author"><%= product.author %></h6>
                    <% } %>
                </section>
                <input class="home-add-cart-button comprar_cart" data-id="<%= product.id %>" type="button" value="Agregar al carrito">
            </article>
            <% }) %>
        </section>
        
    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
    <script src="/js/cart-home.js"></script>
</body>

</html>