<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EL - Listar Producto</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arvo&family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <header class="createpr-header">
            
        <div class="sizing-menu-paty crearpr-desap-Desktop"><img class="centrar-icono" src="img/menu-paty.jpg"
                alt="menu-paty">
        </div>
        <div class="sizing-logo"><a href="/"><img class="centrar-logo" src="img/logo-entre-lineas.jpg" alt="entreLineasLogo"></a></div>

        <div class="listarpr-desap-Mobile crearpr-flex-box-texto">
            <div class = "grow"><h6><a>Listar Productos</a></h6></div>
            <div class = "grow"><h6><a>Crear Productos</a></h6></div>
            <div class = "grow"><h6><a>Editar Productos</a></h6></div>
        </div>
        <div class="sizing-carrito ordenar-carrito"><a href="/home"><img class="centrar-icono" src="img/icono-home.png" alt="home"></a></div>
       
    </header>

 
    <main>
        <h2 class="titulo-none"><%= about.books %></h2>
        <h3 class="creatprod-title">LISTADO DE PRODUCTOS</h3>
        <div class="creatProd-buttom"> 
            <a href ='/crearProducto'><button class="create-buttom"><img class="img-buttom" src="/img/agregar-nuevo.png" alt="icon"></button></a>
        </div>
     
        <form class="nav-search" action="" method="GET" role="search" >
            <input  class="box-ingrese-datos" type="text" placeholder="Filtrar">
            <button type="submit" class="nav-search-btn" tabindex="3">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </form>
    <section class="lp-product-section">
        <% books.forEach(product => { %>
        <article class="lp-article-sizig">
            <div class="lp-div-titulo-producto">
                <h5 class="lp-h5-titulo"> <%= product.name %></h5>
            </div>
            <div class="lp-div-img">
                <img src="<%= product.picture %>" class="lp-img">
            </div>
            <div class="lp-div-textos">
                <h5 class="lp-h5-etiquetas">Id:</h5><h5 class="lp-h5-contenido"><%= product.id %></h5>
                <h5 class="lp-h5-etiquetas">Tipo:</h5><h5 class="lp-h5-contenido"><%= product.type %></h5>
                <h5 class="lp-h5-etiquetas">Genero:</h5><h5 class="lp-h5-contenido"> <%= product.gender %></h5>
                <h5 class="lp-h5-etiquetas">Autor:</h5><h5 class="lp-h5-contenido"> <%= product.author %></h5>
                <h5 class="lp-h5-etiquetas">Precio:</h5><h5 class="lp-h5-contenido"> <%= product.price %></h5>
            </div>
            <div class="lp-div-textos-2">
                <h5 class="lp-h5-etiquetas">Reseña:</h5><p class="lp-h5-contenido"> <%= product.opinion %></p>
                <h5 class="lp-h5-etiquetas">Imágenes:</h5><h5 class="lp-h5-contenido"> <%= product.picture %></h5>
            </div>
            <div class="lp-div-buttoms">
                <input class="lp-button" type="button" value="Editar" >
                <input class="lp-button" type="button" value="Eliminar">
            </div> 
           
           

        </article>    
        <% }) %>
    </section>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
</body>

</html>