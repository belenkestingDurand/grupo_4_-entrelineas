        <div class="head_logos_login products_hed_logos_login">
             
                    <% if (locals.isLogged) { %>
                      
                            <div class="cont-pic-name">
                                <a class="user_profile_picture_nav" href="/users/userProfile" >
                                    <img class= "login-img" src="/img/users/<%=locals.userLogged.profilePic %>">
                                </a>
                            </div>
                            <div class="nav-bot-header">
                                <a class="nav-link" href="/users/logout">Logout</a>
                           </div>
                           
                    <% } else { %>    
                        <div class="nav-bot-header"><a class="nav-link" href="/users/login">Login</a></div>
                    <% } %>
            
        </div>
    </section>
        <%- include('../partials/navbar.ejs') %>
    </header>
    <% if (locals.isLogged) { %>
        <div class='burger-menu-backgrwound-admin burger-menu-display-none'>
            <div class='div-content-bm'>
                <img class="login-img" src="/img/users/<%=locals.userLogged.profilePic%>"/>
